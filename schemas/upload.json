{
  "id": "upload",
  "type": "object",
  "required": ["files", "meta", "username"],
  "properties": {
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "$ref": "common#/definitions/cappasity-binary"
          },
          {
            "$ref": "common#/definitions/cappasity-image"
          },
          {
            "$ref": "common#/definitions/image"
          },
          {
            "$ref": "common#/definitions/background-image"
          }
        ]
      }
    },
    "meta": {
      "allOf": [
        {
          "$ref": "common#/definitions/meta"
        },
        {
          "type": "object",
          "required": ["name"]
        }
      ]
    },
    "username": {
      "$ref": "common#/definitions/owner"
    },
    "access": {
      "type": "object",
      "required": ["setPublic"],
      "properties": {
        "setPublic": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "temp": {
      "type": "boolean",
      "default": false
    },
    "unlisted": {
      "type": "boolean",
      "default": false
    },
    "origin": {
      "type": "string",
      "format": "uri"
    },
    "resumable": {
      "type": "boolean",
      "default": true
    },
    "expires": {
      "type": "integer",
      "default": 900
    }
  }
}

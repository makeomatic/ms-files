{
  "$id": "upload",
  "type": "object",
  "required": [
    "files",
    "meta",
    "username"
  ],
  "properties": {
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          { "$ref": "common#/definitions/cp-binary" },
          { "$ref": "common#/definitions/cp-image" },
          { "$ref": "common#/definitions/image" },
          { "$ref": "common#/definitions/background-image" },
          { "$ref": "common#/definitions/arbitrary" },
          { "$ref": "common#/definitions/video" },
          { "$ref": "common#/definitions/cp-pack" },
          { "$ref": "common#/definitions/cp-masks" },
          { "$ref": "common#/definitions/cp-gltf" },
          { "$ref": "common#/definitions/cp-usdz" },
          { "$ref": "common#/definitions/c-ar-color" },
          { "$ref": "common#/definitions/c-ar-masks" },
          { "$ref": "common#/definitions/c-nn-color-source" },
          { "$ref": "common#/definitions/c-nn-mask-source" },
          { "$ref": "common#/definitions/c-orig-color" },
          { "$ref": "common#/definitions/c-orig-masks" }
        ]
      }
    },
    "meta": {
      "allOf": [
        { "$ref": "common#/definitions/meta" },
        {
          "type": "object",
          "required": ["name"],
          "not": {
            "required": ["alias"]
          }
        }
      ]
    },
    "postAction": {
      "type": "object",
      "additionalProperties": false,
      "minProperties": 1,
      "properties": {
        "update": {
          "allOf": [
            { "$ref": "common#/definitions/meta" },
            { "type": "object", "minProperties": 1 }
          ]
        }
      }
    },
    "username": {
      "$ref": "common#/definitions/owner"
    },
    "access": {
      "type": "object",
      "required": [
        "setPublic"
      ],
      "properties": {
        "setPublic": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "origin": {
      "type": "string",
      "format": "uri"
    },
    "resumable": {
      "type": "boolean",
      "default": true
    },
    "expires": {
      "type": "integer",
      "default": 900
    },
    "temp": {
      "type": "boolean",
      "default": false
    },
    "unlisted": {
      "type": "boolean",
      "default": false
    },
    "uploadType": {
      "type": "string",
      "enum": [
        "simple",
        "image",
        "background",
        "model",
        "text",
        "pdf",
        "pano-equirect",
        "pano-cubemap",
        "google-model-viewer"
      ]
    },
    "directOnly": {
      "type": "boolean",
      "default": false
    }
  },
  "allOf": [{
    "if": {
      "required": ["resumable"],
      "properties": { "resumable": { "const": false } }
    },
    "then": {
      "not": {
        "required": ["unlisted", "temp"],
        "properties": {
          "unlisted": { "const": true },
          "temp": { "const": true }
        }
      }
    }
  }, {
    "if": {
      "required": ["uploadType"],
      "properties": { "uploadType": { "const": "simple" } }
    },
    "then": {
      "properties": {
        "files": {
          "type": "array",
          "allOf": [{
            "contains": { "$ref": "common#/definitions/cp-image" }
          }, {
            "contains": {
              "type": "object",
              "required": ["type"],
              "properties": { "type": { "const": "c-preview" } }
            }
          }]
        }
      }
    }
  }, {
    "if": {
      "required": ["uploadType"],
      "properties": { "uploadType": { "const": "text" } }
    },
    "then": {
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "$ref": "common#/definitions/arbitrary"
          }
        }
      }
    }
  }, {
    "if": {
      "anyOf": [
        { "required": ["unlisted"], "properties": { "unlisted": { "const": true } } },
        { "required": ["temp"], "properties": { "temp": { "const": true } } }
      ]
    },
    "then": { "not": { "required": ["postAction"] } }
  }, {
    "if": {
      "required": [
        "uploadType"
      ],
      "properties": {
        "uploadType": {
          "const": "pano-equirect"
        }
      }
    },
    "then": {
      "properties": {
        "files": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "allOf": [{
            "contains": {
              "$ref": "common#/definitions/pano-equirect-image"
            },
            "minContains": 1,
            "maxContains": 1
          }, {
            "contains": {
              "$ref": "common#/definitions/c-preview"
            },
            "minContains": 1,
            "maxContains": 1
          }]
        }
      }
    }
  }, {
    "if": {
      "required": [
        "uploadType"
      ],
      "properties": {
        "uploadType": {
          "const": "pano-cubemap"
        }
      }
    },
    "then": {
      "properties": {
        "files": {
          "type": "array",
          "minItems": 7,
          "maxItems": 7,
          "allOf": [{
            "contains": {
              "$ref": "common#/definitions/pano-cubemap-image"
            },
            "minContains": 6,
            "maxContains": 6
          }, {
            "contains": {
              "$ref": "common#/definitions/c-preview"
            },
            "minContains": 1,
            "maxContains": 1
          }]
        }
      }
    }
  }, {
    "if": {
      "required": [
        "uploadType"
      ],
      "properties": {
        "uploadType": {
          "const": "google-model-viewer"
        }
      }
    },
    "then": {
      "properties": {
        "files": {
          "type": "array",
          "minItems": 2,
          "maxItems": 3,
          "allOf": [{
            "contains": {
              "$ref": "common#/definitions/cp-gltf"
            },
            "minContains": 1,
            "maxContains": 1
          }, {
            "contains": {
              "$ref": "common#/definitions/cp-usdz"
            },
            "minContains": 0,
            "maxContains": 1
          }, {
            "contains": {
              "$ref": "common#/definitions/c-preview"
            },
            "minContains": 1,
            "maxContains": 1
          }]
        }
      }
    }
  }]
}

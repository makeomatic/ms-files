{
  "$id": "common",
  "definitions": {
    "owner": {
      "type": "string",
      "minLength": 1,
      "maxLength": 78
    },
    "uploadId": {
      "type": "string",
      "format": "uuid"
    },
    "tags": {
      "type": "array",
      "maxItems": 20,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[^,]{1,20}$"
      }
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 75
    },
    "filename": {
      "oneOf": [{
        "type": "string",
        "pattern": "^[0-9A-Fa-f]{32}\/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}\/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}"
      }, {
        "type": "string",
        "pattern": "^cfs:[0-9A-Fa-f]{32}$"
      }]
    },
    "controlsData": {
      "type": "array",
      "minItems": 29,
      "maxItems": 29,
      "items": {
        "type": "number"
      }
    },
    "categories": {
      "type": "array",
      "maxItems": 500,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 6,
        "maxLength": 13,
        "pattern": "^_s\\d+_c\\d+$"
      }
    },
    "fitToSquare": {
      "type": "boolean"
    },
    "color": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^#(?:[\\dA-Fa-f]{3}){1,2}$"
        },
        {
          "type": "string",
          "pattern": "^rgb\\((?:\\d{1,3},\\s*){2}\\d{1,3}\\)$"
        },
        {
          "type": "string",
          "const": "transparent"
        }
      ]
    },
    "platforms": {
      "type": "array",
      "maxItems": 16,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 32
      }
    },
    "export": {
      "type": "object",
      "required": [
        "format",
        "compression"
      ],
      "properties": {
        "format": {
          "type": "string",
          "enum": [
            "stl",
            "obj",
            "wrl"
          ]
        },
        "compression": {
          "type": "string",
          "enum": [
            "zip",
            "gz"
          ]
        },
        "meta": {
          "type": "object",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              },
              {
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    },
    "cp-binary": {
      "type": "object",
      "required": [
        "type",
        "contentType",
        "contentLength",
        "contentEncoding",
        "md5Hash",
        "decompressedLength",
        "source-sha256"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "c-bin"
        },
        "contentType": {
          "type": "string",
          "const": "application/octet-stream"
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000000000
        },
        "decompressedLength": {
          "type": "integer",
          "minimum": {
            "$data": "1/contentLength"
          },
          "maximum": 2000000000
        },
        "contentEncoding": {
          "type": "string",
          "const": "gzip"
        },
        "md5Hash": {
          "$ref": "#/definitions/md5Hash"
        },
        "source-sha256": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{64}$"
        },
        "platforms": {
          "$ref": "#/definitions/platforms"
        }
      }
    },
    "cp-image": {
      "type": "object",
      "required": [
        "type",
        "contentType",
        "contentLength",
        "md5Hash"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "c-texture",
            "c-preview",
            "c-simple",
            "c-pack"
          ]
        },
        "contentType": {
          "type": "string",
          "enum": [
            "image/jpeg",
            "image/png",
            "image/vnd.cappasity"
          ]
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "select": {
            "$data": "1/contentType"
          },
          "selectCases": {
            "image/vnd.cappasity": {
              "maximum": 104857600
            }
          },
          "selectDefault": {
            "maximum": 20971520
          }
        },
        "md5Hash": {
          "$ref": "#/definitions/md5Hash"
        },
        "platforms": {
          "$ref": "#/definitions/platforms"
        }
      }
    },
    "cp-pack": {
      "type": "object",
      "required": [
        "type",
        "contentType",
        "contentLength",
        "md5Hash"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^c-pack\\d+$"
        },
        "contentType": {
          "type": "string",
          "pattern": "^image/vnd.cappasity(\\+[a-z0-9]*)?$"
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 104857600
        },
        "md5Hash": {
          "$ref": "#/definitions/md5Hash"
        },
        "platforms": {
          "$ref": "#/definitions/platforms"
        }
      }
    },
    "cp-usdz": {
      "type": "object",
      "required": [
        "type",
        "contentType",
        "contentLength",
        "md5Hash"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "c-usdz"
        },
        "contentType": {
          "type": "string",
          "enum": [
            "model/usd",
            "model/usdz",
            "model/vnd.usdz+zip",
            "model/vnd.pixar.usd"
          ]
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 104857600
        },
        "md5Hash": {
          "$ref": "#/definitions/md5Hash"
        },
        "platforms": {
          "$ref": "#/definitions/platforms"
        }
      }
    },
    "cp-gltf": {

{
  "id": "common",
  "definitions": {
    "owner": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "uuid-v4": {
      "type": "string",
      "pattern": "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}$"
    },
    "filename": {
      "type": "string",
      "pattern": "^[0-9A-Fa-f]{32}\/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}\/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}"
    },
    "cappasity-binary": {
      "type": "object",
      "required": ["type", "contentType", "contentLength", "contentEncoding", "md5Hash"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "constant": "c-bin"
        },
        "contentType": {
          "type": "string",
          "constant": "application/octet-stream"
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000000000
        },
        "contentEncoding": {
          "type": "string",
          "constant": "gzip"
        },
        "md5Hash": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{32}$"
        }
      }
    },
    "cappasity-image": {
      "type": "object",
      "required": ["type", "contentType", "contentLength", "md5Hash"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["c-texture", "c-preview"]
        },
        "contentType": {
          "type": "string",
          "constant": "image/jpeg"
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20000000
        },
        "md5Hash": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{32}$"
        }
      }
    },
    "cappasity-archive": {
      "type": "object",
      "required": ["type", "contentType", "contentLength", "md5Hash"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "constant": "c-archive"
        },
        "contentType": {
          "type": "string",
          "constant": "application/cappasity-archive"
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000000000
        },
        "md5Hash": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{32}$"
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 150
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 2000
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "tags": {
          "type": "array"
        }
      }
    },
    "filter-props": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        {
          "type": "object",
          "minProperties": 1,
          "maxProperties": 2,
          "patternProperties": {
            "^(ne|eq|match)$": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50
            },
            "^(gte|lte)$": {
              "type": "number"
            },
            "^(exists|isempty)$": {
              "type": "boolean"
            }
          }
        }
      ]
    }
  }
}
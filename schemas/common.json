{
  "$id": "common",
  "definitions": {
    "owner": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "uploadId": {
      "type": "string",
      "format": "uuid"
    },
    "tags": {
      "type": "array",
      "maxItems": 20,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[^,]{1,20}$"
      }
    },
    "filename": {
      "type": "string",
      "pattern": "^[0-9A-Fa-f]{32}\/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}\/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}"
    },
    "controlsData": {
      "type": "array",
      "minItems": 29,
      "maxItems": 29,
      "items": {
        "type": "number"
      }
    },
    "fitToSquare": {
      "type": "boolean"
    },
    "color": {
      "type": "string",
      "pattern": "^(#(?:[\\dA-Fa-f]{3}){1,2}|rgb\\((?:\\d{1,3},\\s*){2}\\d{1,3}\\))$"
    },
    "export": {
      "type": "object",
      "required": ["format", "compression"],
      "properties": {
        "format": {
          "type": "string",
          "enum": ["stl", "obj", "wrl"]
        },
        "compression": {
          "type": "string",
          "enum": ["zip", "gz"]
        },
        "meta": {
          "type": "object",
          "additionalProperties": {
            "anyOf": [{
              "type": "string"
            }, {
              "type": "number"
            }, {
              "type": "array",
              "items": {
                "oneOf": [{
                  "type": "string"
                }, {
                  "type": "number"
                }]
              }
            }]
          }
        }
      }
    },
    "cappasity-binary": {
      "type": "object",
      "required": ["type", "contentType", "contentLength", "contentEncoding", "md5Hash", "decompressedLength", "source-sha256"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "c-bin"
        },
        "contentType": {
          "type": "string",
          "const": "application/octet-stream"
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000000000
        },
        "decompressedLength": {
          "type": "integer",
          "minimum": {
            "$data": "1/contentLength"
          },
          "maximum": 2000000000
        },
        "contentEncoding": {
          "type": "string",
          "const": "gzip"
        },
        "md5Hash": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{32}$"
        },
        "source-sha256": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{64}$"
        }
      }
    },
    "cappasity-image": {
      "type": "object",
      "required": ["type", "contentType", "contentLength", "md5Hash"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["c-texture", "c-preview", "c-simple", "c-pack"]
        },
        "contentType": {
          "type": "string",
          "enum": ["image/jpeg", "image/png", "image/vnd.cappasity"]
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "select": {
            "$data": "1/contentType"
          },
          "selectCases": {
            "image/vnd.cappasity": {
              "maximum": 104857600
            }
          },
          "selectDefault": {
            "maximum": 20971520
          }
        },
        "md5Hash": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{32}$"
        }
      }
    },
    "background-image": {
      "type": "object",
      "required": ["type", "contentType", "contentLength", "md5Hash"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "background"
        },
        "contentType": {
          "type": "string",
          "enum": ["image/jpeg", "image/png"]
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2097152
        },
        "md5Hash": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{32}$"
        }
      }
    },
    "image": {
      "type": "object",
      "required": ["type", "contentType", "contentLength", "md5Hash"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "not": {
            "enum": ["c-texture", "c-preview", "c-simple"]
          }
        },
        "contentType": {
          "type": "string",
          "enum": ["image/jpeg", "image/png", "image/svg+xml"]
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20000000
        },
        "md5Hash": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{32}$"
        }
      }
    },
    "arbitrary": {
      "type": "object",
      "required": ["type", "contentType", "contentLength", "md5Hash"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "arbitrary"
        },
        "contentType": {
          "type": "string",
          "enum": ["text/plain", "application/pdf"]
        },
        "contentLength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 104857600
        },
        "md5Hash": {
          "type": "string",
          "pattern": "^[0-9A-Fa-f]{32}$"
        },
        "contentEncoding": {
          "type": "string",
          "enum": ["gzip"]
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^c_[a-z]+$": {
          "anyOf": [
            { "type": "string" },
            { "type": "number" }
          ]
        }
      },
      "properties": {
        "alias": {
          "type": "string",
          "pattern": "^[0-9A-Za-z_\\-.]{0,50}$"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 75
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 2000
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "tags": {
          "$ref": "common#/definitions/tags"
        },
        "export": {
          "$ref": "common#/definitions/export"
        },
        "controlsData": {
          "$ref": "common#/definitions/controlsData"
        },
        "backgroundColor": {
          "$ref": "common#/definitions/color"
        },
        "fitToSquare": {
          "$ref": "common#/definitions/fitToSquare"
        },
        "backgroundImage": {
          "oneOf": [{
            "type": "string",
            "format": "uri"
          }, {
            "type": "string",
            "const": ""
          }]
        },
        "type": {
          "type": "string",
          "enum": [
            "default",
            "object",
            "dslr",
            "human",
            "user"
          ]
        }
      }
    },
    "filter-props": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        {
          "type": "object",
          "minProperties": 1,
          "maxProperties": 2,
          "patternProperties": {
            "^(ne|eq|match)$": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50
            },
            "^(gte|lte)$": {
              "type": "number"
            },
            "^(exists|isempty)$": {
              "type": "boolean"
            }
          }
        }
      ]
    }
  }
}

        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^c_[a-zA-Z]+$": {
          "anyOf": [
            {
              "type": "string",
              "maxLength": 262144
            },
            {
              "type": "number"
            }
          ]
        },
        "^cfs:[0-9A-Fa-f]{32}$": {
          "type": "string",
          "maxLength": 8192
        }
      },
      "allOf": [
        {
          "if": {
            "required": [
              "pWidth"
            ]
          },
          "then": {
            "required": [
              "pHeight"
            ]
          }
        },
        {
          "if": {
            "required": [
              "pHeight"
            ]
          },
          "then": {
            "required": [
              "pWidth"
            ]
          }
        }
      ],
      "properties": {
        "alias": {
          "type": "string",
          "pattern": "^[0-9A-Za-z_\\-.\\s]{0,50}$"
        },
        "name": {
          "$ref": "common#/definitions/name"
        },
        "description": {
          "type": "string",
          "minLength": 0,
          "maxLength": 20000
        },
        "version": {
          "type": "string"
        },
        "cycle": {
          "type": "boolean"
        },
        "website": {
          "oneOf": [
            {
              "type": "string",
              "format": "http-url"
            },
            {
              "type": "string",
              "const": ""
            }
          ]
        },
        "tags": {
          "$ref": "common#/definitions/tags"
        },
        "export": {
          "$ref": "common#/definitions/export"
        },
        "controlsData": {
          "$ref": "common#/definitions/controlsData"
        },
        "backgroundColor": {
          "$ref": "common#/definitions/color"
        },
        "fitToSquare": {
          "$ref": "common#/definitions/fitToSquare"
        },
        "backgroundImage": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "type": "string",
              "const": ""
            }
          ]
        },
        "type": {
          "type": "string",
          "enum": [
            "default",
            "object",
            "dslr",
            "human",
            "user"
          ]
        },
        "capabilities": {
          "description": "Contains capabilities for a given 3D model",
          "type": "array",
          "uniqueItems": true,
          "maxItems": 32,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 32
          }
        },
        "dimensions": {
          "description": "sizes of 3d object in metres",
          "type": "array",
          "maxItems": 32,
          "items": {
            "type": "number"
          }
        },
        "ar3dviewProps": {
          "$ref": "#/definitions/propsObject"
        },
        "playerSettings": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/simpleTypes"
          },
          "properties": {
            "rotatemode": {
              "type": "string",
              "enum": [
                "loop",
                "once",
                "boomerang"
              ]
            },
            "ttc": {
              "type": "number",
              "exclusiveMinimum": 0,
              "description": "turn time coefficient"
            },
            "autorotatetime": {
              "type": "number",
              "minimum": 2,
              "maximum": 60
            },
            "beginFrame": {
              "type": "integer",
              "minimum": 0
            },
            "endFrame": {
              "type": "integer",
              "minimum": 0
            },
            "startViewFrame": {
              "type": "integer",
              "minimum": 0
            },
            "reverse": {
              "type": "boolean"
            }
          }
        },
        "creationInfo": {
          "type": "object",
          "description": "Contains description of the application that initiated upload and additional upload information.",
          "additionalProperties": false,
          "properties": {
            "os": {
              "type": "string",
              "enum": [
                "macos",
                "linux",
                "windows",
                "android",
                "ios"
              ]
            },
            "osVersion": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50
            },
            "application": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50
            },
            "applicationVersion": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50
            },
            "props": {
              "description": "Extra information provided by application.",
              "$ref": "#/definitions/propsObject"
            }
          }
        },
        "pWidth": {
          "type": "integer",
          "description": "Preview/Image width"
        },
        "pHeight": {
          "type": "integer",
          "description": "Preview/Image height"
        },
        "isInShowroom": {
          "type": "boolean"
        },
        "nft": {
          "type": "object",
          "required": [
            "price",
            "currency",
            "supply",
            "image"
          ],
          "properties": {
            "price": {
              "type": "string"
            },
            "asset": {
              "type": "string"
            },
            "story": {
              "type": "string"
            },
            "currency": {
              "type": "string",
              "enum": [
                "usd",
                "eur",
                "capp"
              ]
            },
            "supply": {
              "type": "number"
            },
            "image": {
              "type": "string"
            },
            "attributes": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "title",
                  "type"
                ],
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  },
                  "id": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "width": {
          "type": "integer",
          "description": "For panorama: panorama width"
        },
        "height": {
          "type": "integer",
          "description": "For panorama: panorama height"
        },
        "nftOwner": {
          "type": "string",
          "pattern": "^0x[0-9A-Fa-f]{40}$"
        },
        "nftCollection": {
          "type": "string",
          "format": "uuid"
        },
        "nftToken": {
          "type": "string",
          "pattern": "^[0-9]{58}$"
        },
        "nftAmount": {
          "type": "number"
        },
        "nftBlock": {
          "type": "number"
        },

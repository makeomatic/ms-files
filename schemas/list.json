{
  "id": "list",
  "type": "object",
  "properties": {
    "offset": {
      "type": "integer",
      "minimum": 0
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    },
    "order": {
      "type": "string",
      "enum": [ "ASC", "DESC" ]
    },
    "criteria": {
      "type": "string"
    },
    "owner": {
      "type": "string"
    },
    "public": {
      "type": "boolean"
    },
    "filter": {
      "type": "object",
      "properties": {
        "#multi": {
          "type": "object",
          "required": [ "fields", "match" ],
          "properties": {
            "fields": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "match": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      },
      "patternProperties": {
        "^.+$": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "type": "object",
              "minProperties": 1,
              "maxProperties": 2,
              "properties": {
                "patternProperties": {
                  "^(ne|eq|match)$": {
                    "type": "string",
                    "minLength": 1
                  },
                  "^(gte|lte)$": {
                    "type": "number"
                  },
                  "^(exists|isempty)$": {
                    "type": "boolean"
                  }
                }
              }
            }
          ]
        }
      }
    }
  }
}
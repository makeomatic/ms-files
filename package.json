{
  "name": "ms-files",
  "description": "Opinionated solution for managing files with GCS and other cloud storage providers",
  "main": "./lib/index.js",
  "version": "15.16.0",
  "scripts": {
    "compile": "rimraf ./lib && babel -d ./lib --copy-files ./src",
    "pretest": "yarn compile",
    "test": "rimraf ./coverage && yarn lint && yarn test:e2e",
    "test:e2e": "yarn test:e2e:cluster && yarn test:e2e:sentinel",
    "test:e2e:cluster": "DB=cluster mdep test run",
    "test:e2e:sentinel": "DB=sentinel mdep test run --docker_compose ./test/docker-compose.sentinel.yml",
    "start": "mfleet",
    "lint": "eslint ./src ./test ./bin",
    "prepublishOnly": "yarn compile",
    "semantic-release": "semantic-release",
    "docker-release": "mdep docker release",
    "release": "yarn --frozen-lockfile && yarn semantic-release",
    "coverage:clean": "rimraf .nyc_output",
    "coverage:report": "yarn nyc report --reporter=lcov"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/ms-files.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ca>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-files/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-files#readme",
  "dependencies": {
    "@google-cloud/storage": "5.17.0",
    "@hapi/hapi": "^20.2.1",
    "@hapi/joi": "^17.1.1",
    "@microfleet/core": "^17.6.0",
    "@microfleet/transport-amqp": "^15.2.8",
    "@microfleet/validation": "11.1.1",
    "@sentry/node": "^6.16.1",
    "ali-oss": "^6.16.0",
    "bl": "^5.0.0",
    "bluebird": "^3.7.2",
    "cluster-key-slot": "^1.1.0",
    "common-errors": "^1.2.0",
    "dlock": "^12.1.1",
    "flatstr": "^1.0.12",
    "gcs-resumable-upload": "^4.0.1",
    "ioredis": "4.28.3",
    "is": "^3.3.0",
    "jaeger-client": "^3.19.0",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "mime-types": "^2.1.34",
    "moment": "^2.29.1",
    "ms-conf": "^7.0.2",
    "ms-files-transport": "^1.0.2",
    "ms-perf": "^2.1.0",
    "opentracing-js-ioredis": "2.1.2",
    "prom-client": "^12.0.0",
    "raven": "^2.6.4",
    "redis-filtered-sort": "^2.4.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "stdout-stream": "^1.4.1",
    "uuid": "^8.3.2",
    "yargs": "^17.3.1"
  },
  "optionalDependencies": {
    "@google-cloud/pubsub": "^2.18.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.7",
    "@babel/plugin-transform-strict-mode": "^7.16.7",
    "@babel/register": "^7.16.9",
    "@makeomatic/deploy": "^10.4.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "babel-plugin-istanbul": "^6.1.1",
    "chai": "^4.3.4",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-config-makeomatic": "^5.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "faker": "^5.5.3",
    "json": "^11.0.0",
    "mocha": "^9.1.4",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1"
  },
  "engines": {
    "node": ">= 12.14.0",
    "npm": ">= 4.0.0"
  },
  "files": [
    "src/",
    "schemas/",
    "lib/",
    "lua/",
    "bin/"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "./node_modules/@makeomatic/deploy/git-hooks/prepare-commit-msg $HUSKY_GIT_PARAMS"
    }
  }
}
